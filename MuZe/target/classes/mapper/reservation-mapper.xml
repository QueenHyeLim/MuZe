	<select id="showLatest" resultMap="reservationMap">
		SELECT 
						ROWNUM, A.*
		  FROM 
				 		(SELECT 
						        MUS_ID,
						        T.THEATHER_NAME,
						        GENRE_NO,
						        MUS_TITLE,
						        START_DATE,
						        END_DATE,
						        RUN_TIME,
						        POSTER,
						        AGE_RATE,
						        STATUS,
						        PER_TIME,
						        CAST
						 FROM 
						        SHOW S
				         JOIN
				                THEATER T
				          ON
				               (T.THEATER_ID = S.THEATER_ID)
						 WHERE 
						        STATUS = '공연중' 
		                  AND
		                        GENRE_NO = 1
		                ORDER
		         		   BY
		         				START_DATE ASC  )A
	</select>

	<select id="selectMus" parameterType="string" resultMap="reservationMap">
		SELECT 
			        MUS_ID,
			        T.THEATHER_NAME,
			        GENRE,
			        MUS_TITLE,
			        START_DATE,
			        END_DATE,
			        RUN_TIME,
			        POSTER,
			        AGE_RATE,
			        STATUS,
			        PER_TIME,
			        CAST
		 FROM 
				    SHOW S
		 JOIN
		            THEATER T
		   ON
		            (T.THEATER_ID = S.THEATER_ID)
         JOIN
                    SHOW_GENRE
         USING    
                    (GENRE_NO)
		  WHERE 
				    STATUS = '공연중' 
            AND
                    MUS_ID = #{ musId }	
	</select>
	 
	<select id="selectMusPrice" resultType="seatprice">
		SELECT
		        SEATPK seatPk,
		        KIND kind,
		        PRICE price
		  FROM
		        SEATPRICE	
	</select>

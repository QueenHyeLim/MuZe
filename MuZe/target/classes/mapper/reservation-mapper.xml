	<select id="receiveResno" parameterType="_int" resultMap="disabledSeatMap">
		SELECT 
		        RES_NO
		  FROM
		        TICKET T
		 JOIN
		        RESERVE R
		USING
		        (RES_NO)
		 WHERE
		        R.USER_NO = #{userNo}
	</select>
	
	<select id="ticketList" parameterType="_int" resultMap="ticketListMap">
		SELECT
	        		TICKET_NO, 
	        		MUS_ID, 
	        		MUS_TITLE,  
	        		RES_NO, 
	        		SEAT_NO, 
	        		SEAT_ID, 
	        		to_char(RES_DATE, 'YYYY-MM-DD') AS RES_DATE,
	        		s.theater_id, 
	        		t.theather_name
		  FROM
			        BOOK
		  JOIN
			        RESERVE
		    ON
			        (RES_NO = BOOK_NO)
		  JOIN
		       		TICKET
		 USING
		        	(RES_NO)
		  JOIN
		        	SHOW S
		 USING
		       		(MUS_ID)
		  JOIN
		        	SEAT
		  USING
		        	(SEAT_NO)
		 JOIN
		        	THEATER T
		 ON
		        	(T.THEATER_ID = S.THEATER_ID)
		 WHERE
		        	RES_NO = #{resNo}
	</select>
	
	<select id="searchMuze" parameterType="_int" resultMap="reservationMap">
		SELECT 
						ROWNUM, A.*
		  FROM 
				 		(SELECT 
						        MUS_ID,
						        T.THEATHER_NAME,
						        GENRE_NO,
						        MUS_TITLE,
						        START_DATE,
						        END_DATE,
						        RUN_TIME,
						        POSTER,
						        AGE_RATE,
						        STATUS,
						        PER_TIME,
						        CAST
						 FROM 
						        SHOW S
				         JOIN
				                THEATER T
				          ON
				               (T.THEATER_ID = S.THEATER_ID)
						 WHERE 
						        STATUS = '공연중'
				<choose>
					<when test="genre == 1">
					AND
		                        GENRE_NO = 1	
					</when>
					<otherwise>
					AND
		                        GENRE_NO = 2	
					</otherwise>
				</choose> 
		      ORDER
		         BY
		         		START_DATE ASC)A            
	</select>
